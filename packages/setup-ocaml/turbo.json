{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "outputs": ["../../dist/**"],
      "passThroughEnv": [
        "GITHUB_ACTIONS",
        "GITHUB_WORKSPACE",
        "HOMEBREW_NO_INSTALLED_DEPENDENTS_CHECK",
        "PATH",
        "USERPROFILE",
        "XDG_CACHE_HOME"
      ]
    }
  }
}
